<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-6 left">
		<%#= image_tag @listing.image.url(:medium) %>
	</div>	
	<div class="col-md-6">
		<div class="card-block">
			<h3><%= @listing.name %></h3>
			<p><%= @listing.description %></p>
			<p><%= number_to_currency(@listing.price) %></p>
			<%= link_to 'Edit', edit_listing_path(@listing), class:"card-link" %>  |
			<%= link_to 'Back', listings_path, class:"card-link" %>
		</div>
	</div>
</div>



